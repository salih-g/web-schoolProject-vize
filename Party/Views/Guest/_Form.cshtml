@model Party.Models.GuestResponse

<form method="post" class="m-2">
    <div asp-validation-summary="All"></div>

    <!-- Name input -->
    <div class="form-outline">
        <label asp-for="Name" class="form-label" for="name">Adınız:</label>
        <input asp-for="Name" type="text" id="name" class="form-control" />
    </div>

    <!-- Email input -->
    <div class="form-outline mb-4">
        <label asp-for="Email" class="form-label" for="email">Mail Adresiniz:</label>
        <input asp-for="Email" type="email" id="email" class="form-control" />
    </div>

    <!-- Phone input -->
    <div class="form-outline mb-4">
        <label asp-for="Phone" class="form-label" for="number">Telefon Numaranız:</label>
        <input asp-for="Phone" type="number" id="number" class="form-control" />
    </div>
    <div class="form-outline mb-4">
        <label>Katılıcak mısınız ?</label>
        <select asp-for="WillAttend" class="form-control">
            <option value="">Seçiniz.</option>
            <option value="true">Evet katılacağım.</option>
            <option value="false">Katılamıcağım.</option>
        </select>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-dark btn-block mb-4">
        Formu Gönder
    </button>
</form>